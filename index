#!/bin/sh

test ! -z "$HTTP_PARAM_t" || HTTP_PARAM_t=0

flags="-c"
if test -z "$HTTP_PARAM_b"; then
	buttons="$buttons`QB üÖ±Ô∏è b 1`"
else
	flags="$flags -b"
	buttons="$buttons`QB "#Ô∏è‚É£" b`"
fi

test -z "$HTTP_PARAM_r" || flags="$flags -B"

if test -z "$HTTP_PARAM_l"; then
	buttons="$buttons`QB üèõÔ∏è l 1`"
else
	flags="$flags -l"
	buttons="$buttons`QB üî† l`"
fi

_TITLE="`cat data.txt | head -n 1`"

buttons="$buttons`echo "<input name='t' type='number' step='1' value='$HTTP_PARAM_t'></input>" | FB "üéöÔ∏è" "" "GET" "t"`"

if is_main; then
	im $OWNER || buttons="$buttons`IFB "üî±" "$DOCUMENT_URI/fork"`"
else
	buttons="$buttons`RB "üîç" "$DOCUMENT_URI/diff"`"
	im $ORIG_OWNER && buttons="$buttons`IFB "üü£" "$DOCUMENT_URI/merge"`"
fi

echo "$buttons" >> $DOCUMENT_ROOT/tmp/fun
yt="`zcat yt`"
test -z "$yt" || \
	printf "\n<iframe src='https://www.youtube.com/embed/$yt' frameborder='0'></iframe>"

cat - <<!
<pre class='v0 chords'>
`cat data.txt | tail -n +3 | transp -t $HTTP_PARAM_t -h $flags`
</pre>
<b>`_ Types`</b>
<pre>
`cat type`
</pre>
<div id="osmdContainer" class="shf"></div>
<script src="https://unpkg.com/opensheetmusicdisplay@1.9.0/build/opensheetmusicdisplay.min.js"></script>
<script>
  var osmd = new opensheetmusicdisplay.OpenSheetMusicDisplay("osmdContainer");
  osmd.TransposeCalculator = new opensheetmusicdisplay.TransposeCalculator();
  osmd.setOptions({
    backend: "canvas",
    drawTitle: false,
    drawingParameters: "compact"
  });
  osmd
    .load("https://tty.pt/$iid.musicxml")
    .then(
      function() {
        osmd.Zoom = 0.7;
        osmd.Sheet.Transpose = +$HTTP_PARAM_t;
	osmd.updateGraphic();
        osmd.render();
      }
    );
</script>
!
