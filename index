#!/bin/sh

test ! -z "$HTTP_PARAM_t" || HTTP_PARAM_t=0

_TITLE="`cat title`"

if is_main; then
	im $OWNER || test -z "$REMOTE_USER" | buttons="$buttons`IFB "üî±" "fork" "$DOCUMENT_URI/fork"`"
else
	buttons="$buttons`RB "üîç" "" "$DOCUMENT_URI/diff"`"
	im $ORIG_OWNER && buttons="$buttons`IFB "üü£" "$DOCUMENT_URI/merge"`"
fi

. ../../lib

key_form() {
	key_select data.txt $HTTP_PARAM_t \
		| FB "üéöÔ∏è" "tune" "" "GET" "t"
}

test ! -z "$HTTP_PARAM_c" || buttons="$buttons`key_form`"

more_fun "$buttons"

chords_print $iid $HTTP_PARAM_t "`zcat type`"

cat - <<!
<div id="osmdContainer" class="shf"></div>
<script src="https://unpkg.com/opensheetmusicdisplay@1.9.0/build/opensheetmusicdisplay.min.js"></script>
<script>
  var osmd = new opensheetmusicdisplay.OpenSheetMusicDisplay("osmdContainer");
  osmd.TransposeCalculator = new opensheetmusicdisplay.TransposeCalculator();
  osmd.setOptions({
    backend: "canvas",
    drawTitle: false,
    drawingParameters: "compact"
  });
  osmd
    .load("$DOCUMENT_URI/score.mxl")
    .then(
      function() {
        osmd.Zoom = 0.7;
        osmd.Sheet.Transpose = +$HTTP_PARAM_t;
	osmd.updateGraphic();
        osmd.render();
      }
    );
</script>
!
